<script>
    interface Details {
        amount?: number;
        shares?: number;
        pricePerShare?: number;
        coins?: number;
        pricePerCoin?: number;
        area?: number; 
        pricePerPing?: number;
        totalValue?: number;
        balance?: number;
    }

    interface Asset {
        id: string;
        type: string;
        name: string;
        currency: string;
        details: Details;
    }

    // Config for Sections
    const ASSET_TYPES = [
        { id: 'cash', icon: 'ğŸ’°', title: 'ç¾é‡‘ & å­˜æ¬¾', sub: 'éŠ€è¡Œå¸³æˆ¶ / éŒ¢åŒ… / å®šå­˜' },
        { id: 'stock', icon: 'ğŸ“ˆ', title: 'è‚¡ç¥¨ & è­‰åˆ¸', sub: 'å°è‚¡ / ç¾è‚¡ / ETF' },
        { id: 'real_estate', icon: 'ğŸ ', title: 'æˆ¿åœ°ç”¢', sub: 'è‡ªä½ / æŠ•è³‡ / åœŸåœ°' },
        { id: 'crypto', icon: 'â‚¿', title: 'åŠ å¯†è²¨å¹£', sub: 'BTC / ETH / éˆä¸Šè³‡ç”¢' },
        { id: 'car', icon: 'ğŸš—', title: 'æ±½æ©Ÿè»Š', sub: 'ç¾æœ‰è»Šè¼›ä¼°å€¼' },
        { id: 'insurance', icon: 'ğŸ›¡ï¸', title: 'ä¿éšª', sub: 'å„²è“„éšª / æŠ•è³‡å‹ä¿å–®ç¾å€¼' },
        { id: 'other', icon: 'ğŸ’', title: 'å…¶ä»–è³‡ç”¢', sub: 'æ‰‹éŒ¶ / ç å¯¶ / å€Ÿå‡ºæ¬¾é …' },
        { id: 'liability', icon: 'ğŸ’³', title: 'è² å‚µ', sub: 'æˆ¿è²¸ / è»Šè²¸ / ä¿¡ç”¨å¡' },
    ];

    let assets: Asset[] = [];
    let rates: Record<string, number> = { TWD: 1, USD: 32.5, JPY: 0.21, EUR: 35.2, CNY: 4.5, HKD: 4.2 }; 
    const API_URL = 'https://open.er-api.com/v6/latest/USD';

    // Elements
    const sectionsContainer = document.getElementById('asset-sections');
    const totalAmountEl = document.getElementById('total-amount');
    const statusDot = document.getElementById('status-dot');
    const rateInfo = document.getElementById('rate-info');
    const sectionTemplate = document.getElementById('section-template') as HTMLTemplateElement;
    const rowTemplate = document.getElementById('asset-row-template') as HTMLTemplateElement;

    // --- Init ---
    document.addEventListener('DOMContentLoaded', () => {
        initSections();
        loadAssets(); // Triggers render
        fetchRates();
        setInterval(fetchRates, 300000);
    });

    function initSections() {
        if (!sectionsContainer || !sectionTemplate) return;
        sectionsContainer.innerHTML = '';

        ASSET_TYPES.forEach(type => {
            const clone = sectionTemplate.content.cloneNode(true) as DocumentFragment;
            const section = clone.querySelector('section');
            if (!section) return;
            
            section.id = `section-${type.id}`;
            section.querySelector('.section-icon')!.textContent = type.icon;
            section.querySelector('.section-title')!.textContent = type.title;
            // section.querySelector('.section-subtitle')!.textContent = type.sub;
            
            // Add Button Logic
            const btn = section.querySelector('.add-btn') as HTMLButtonElement;
            btn.onclick = () => addAsset(type.id);
            btn.innerHTML = `<span class="bg-gray-800/80 p-1 rounded-md group-hover:bg-cyan-900/50 transition-colors"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg></span> æ–°å¢${type.title}`;

            sectionsContainer.appendChild(section);
        });
    }

    // --- Core Logic ---

    function calculateAssetRowValue(asset: Asset): number {
        const d = asset.details;
        switch (asset.type) {
            case 'stock':
                return (d.shares || 0) * (d.pricePerShare || 0);
            case 'crypto':
                return (d.coins || 0) * (d.pricePerCoin || 0);
            case 'real_estate':
                if (d.area && d.pricePerPing) {
                    return d.area * d.pricePerPing;
                }
                return d.totalValue || 0;
            case 'liability':
                return -(Math.abs(d.amount || 0));
            default:
                return d.amount || 0;
        }
    }

    function calculateTotal() {
        let grandTotal = 0;
        const typeTotals: Record<string, number> = {};

        assets.forEach(asset => {
            const rawVal = calculateAssetRowValue(asset);
            const rate = rates[asset.currency] || 1; 
            const valInTwd = rawVal * rate;
            
            grandTotal += valInTwd;
            typeTotals[asset.type] = (typeTotals[asset.type] || 0) + valInTwd;

            // Update Row UI
            const rowEl = document.querySelector(`.asset-row[data-id="${asset.id}"]`);
            if (rowEl) {
                const totalEl = rowEl.querySelector('.asset-row-total');
                if (totalEl) totalEl.textContent = valInTwd.toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 });
            }
        });

        // Update Section Totals
        ASSET_TYPES.forEach(t => {
            const sec = document.getElementById(`section-${t.id}`);
            if (sec) {
                const totalEl = sec.querySelector('.section-total');
                const val = typeTotals[t.id] || 0;
                if (totalEl) {
                    totalEl.textContent = val.toLocaleString(undefined, { style: 'currency', currency: 'TWD', minimumFractionDigits:0 });
                    if (val < 0) totalEl.classList.add('text-red-400');
                    else totalEl.classList.remove('text-red-400');
                }
            }
        });

        // Update Grand Total
        if (totalAmountEl) {
             const fmt = new Intl.NumberFormat('zh-TW', { style: 'currency', currency: 'TWD', minimumFractionDigits: 0 }).format(grandTotal);
             totalAmountEl.textContent = fmt.replace('TWD', '$');
        }
    }

    function renderDynamicInputs(asset: Asset, container: HTMLElement) {
        container.innerHTML = ''; 

        const createInput = (label: string, field: keyof Details, placeholder = '0', step = 'any') => {
            const wrapper = document.createElement('div');
            
            const labelEl = document.createElement('label');
            labelEl.className = 'text-[10px] text-gray-600 font-bold mb-1 block uppercase tracking-wider pl-1';
            labelEl.textContent = label;
            
            const input = document.createElement('input');
            input.type = 'number'; 
            input.inputMode = 'decimal';
            input.className = 'w-full bg-black/20 border border-white/5 text-white text-sm rounded-lg px-3 py-2 outline-none focus:border-cyan-500/40 focus:bg-black/40 transition-all font-mono hover:bg-black/30';
            input.placeholder = placeholder;
            input.step = step;
            // @ts-ignore
            input.value = asset.details[field]?.toString() || '';
            
            input.addEventListener('input', (e) => {
                const val = parseFloat((e.target as HTMLInputElement).value);
                // @ts-ignore
                asset.details[field] = isNaN(val) ? 0 : val;
                calculateTotal();
                saveAssets();
            });

            wrapper.appendChild(labelEl);
            wrapper.appendChild(input);
            return wrapper;
        };

        switch (asset.type) {
            case 'stock':
                container.appendChild(createInput('è‚¡æ•¸ (Shares)', 'shares'));
                container.appendChild(createInput('ç¾åƒ¹ (Price)', 'pricePerShare'));
                break;
            case 'crypto':
                container.appendChild(createInput('æ•¸é‡ (Amount)', 'coins', '0.0000', '0.00000001'));
                container.appendChild(createInput('ç¾åƒ¹ (Price)', 'pricePerCoin'));
                break;
            case 'real_estate':
                 // Let's default to Total Value for simplicity unless user wants advanced?
                 // Plan said: Area + Price. But simpler to have "Estimated Value" as primary for most?
                 // Let's enable both in a smart way? No, let's just stick to "Estimated Value" for simple UI 
                 // UNLESS we want to force the Area calculation.
                 // Let's provide Total Value (Primary) + Area/Ping (Optional)? 
                 // Actually the user APPROVED the plan which said: Area * Price.
                 container.appendChild(createInput('åªæ•¸', 'area'));
                 container.appendChild(createInput('å–®åƒ¹/åª', 'pricePerPing'));
                break;
            case 'liability':
                 container.appendChild(createInput('å‰©é¤˜é‡‘é¡', 'amount'));
                 break;
            default:
                container.appendChild(createInput('é‡‘é¡', 'amount', '0'));
                // Spacer for layout balance if needed
                const spacer = document.createElement('div');
                container.appendChild(spacer);
                break;
        }
    }

    function renderRow(asset: Asset) {
        if (!rowTemplate) return;
        
        const sectionList = document.querySelector(`#section-${asset.type} .section-list`);
        if (!sectionList) return; // Should exist

        const clone = rowTemplate.content.cloneNode(true) as DocumentFragment;
        const row = clone.querySelector('.asset-row') as HTMLElement;
        row.dataset.id = asset.id;

        const nameInput = row.querySelector('.asset-name') as HTMLInputElement;
        const currencySelect = row.querySelector('.asset-currency') as HTMLSelectElement;
        const deleteBtn = row.querySelector('.delete-btn') as HTMLButtonElement;
        const dynamicInputsContainer = row.querySelector('.dynamic-inputs') as HTMLElement;

        nameInput.value = asset.name;
        currencySelect.value = asset.currency;

        renderDynamicInputs(asset, dynamicInputsContainer);

        nameInput.addEventListener('input', (e) => {
            asset.name = (e.target as HTMLInputElement).value;
            saveAssets();
        });
        
        currencySelect.addEventListener('change', (e) => {
            asset.currency = (e.target as HTMLSelectElement).value;
            calculateTotal();
            saveAssets();
        });

        deleteBtn.addEventListener('click', () => {
            deleteAsset(asset.id);
            row.remove();
            calculateTotal(); // Update section total immediately
        });

        sectionList.appendChild(row);
    }

    function addAsset(type: string) {
        const newAsset: Asset = {
            id: Date.now().toString(),
            type: type,
            name: '',
            currency: 'TWD',
            details: { amount: 0 }
        };
        assets.push(newAsset);
        renderRow(newAsset);
        saveAssets();
        calculateTotal();
    }

    function deleteAsset(id: string) {
        assets = assets.filter(a => a.id !== id);
        saveAssets();
    }
    
    function saveAssets() {
        localStorage.setItem('my_assets_v3', JSON.stringify(assets));
    }

    function loadAssets() {
        // Clear previous renders
        document.querySelectorAll('.section-list').forEach(el => el.innerHTML = '');

        const saved = localStorage.getItem('my_assets_v3');
        if (saved) {
            try {
                assets = JSON.parse(saved);
                assets.forEach(renderRow);
            } catch (e) {}
        } else {
            // Migration V2 -> V3
            const v2 = localStorage.getItem('my_assets_v2');
            if (v2) {
                try {
                    assets = JSON.parse(v2);
                    assets.forEach(renderRow);
                    saveAssets();
                } catch(e) {}
            }
        }
        calculateTotal();
    }

    // --- API & Utilities ---
    async function fetchRates() {
        try {
            const res = await fetch(API_URL);
            const d = await res.json();
            if (d && d.rates) {
                 const usdToTwd = d.rates['TWD'];
                 const newRates: any = {};
                 for (const [curr, rateAgainstUsd] of Object.entries(d.rates)) {
                     newRates[curr] = usdToTwd / (rateAgainstUsd as number);
                 }
                 rates = newRates;
                 updateStatus(true);
                 calculateTotal();
            }
        } catch (e) {
            updateStatus(false);
        }
    }

    function updateStatus(success: boolean) {
        if (!statusDot || !rateInfo) return;
        if (success) {
            statusDot.className = "w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]";
            rateInfo.textContent = "åŒ¯ç‡å·²æ›´æ–°";
        } else {
            statusDot.className = "w-2 h-2 rounded-full bg-red-500";
            rateInfo.textContent = "ä½¿ç”¨é›¢ç·šåŒ¯ç‡";
        }
    }
</script>

